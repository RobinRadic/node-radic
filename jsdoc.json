{
    "source": {
        "include": ["index.js", "lib"],
        "includePattern": ".+\\.js(doc)?$"
    },
    "opts": {
        "recurse": true,
        "destination": "docs/api"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        },
        "systemName"      : "Radic",
        "footer"          : "",
        "copyright"       : "Radic Copyright Â© 2012-2014 Robin Radic.",
        "navType"         : "vertical",
        "theme"           : "amelia",
        "linenums"        : true,
        "collapseSymbols" : false,
        "inverseNav"      : true
    },
    "markdown": {
        "parser": "gfm"
    }
}
